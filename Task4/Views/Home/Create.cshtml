@model UserModel

<form asp-action="Create" method="post">
    <br />
    <div class="container border p-3">
        <h1 class="text-primary">New User</h1>
        <hr />
        <div class="row">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="col-2">
                <label asp-for = "Name" class="control-label pt-2" style="font-size:14px;"></label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="col-2">
                <label asp-for = "Email" class="control-label pt-2" style="font-size:14px;"></label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
           
            <div class="align-content-center">
                <input type="submit" value="Стати розробником" class="btn btn-success form-control" />
            </div>
        </div>
    </div>
</form>

@section SCripts {
    <partial name="_ValidationScriptsPartial" />
}
